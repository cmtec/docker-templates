<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Beta>True</Beta>
<Category>Web:</Category>
  <Name>unifi-video</Name>
  <Description>
  Easily scale IP surveillance camrea network to hundreds of plug and play, high-performance devices across multiple locations.
  </Description>
  <Registry>https://registry.hub.docker.com/u/cmtec/unifi-video/</Registry>
  <Repository>cmtec/unifi-video</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>1935</HostPort>
        <ContainerPort>1935</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>6666</HostPort>
        <ContainerPort>6666</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7004</HostPort>
        <ContainerPort>7004</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>7080</HostPort>
        <ContainerPort>7080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7442</HostPort>
        <ContainerPort>7442</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7443</HostPort>
        <ContainerPort>7443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7445</HostPort>
        <ContainerPort>7445</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7446</HostPort>
        <ContainerPort>7446</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>7447</HostPort>
        <ContainerPort>7447</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
    <Variable>
      <Name>DEBUG</Name>
      <Value>0</Value>
    </Variable>
    <Variable>
      <Name>TZ</Name>
      <Value>Europe/Stockholm</Value>
    </Variable>
  </Environment>
  <Data>
     <Volume>
      <HostDir></HostDir>
      <ContainerDir>/var/lib/unifi-video</ContainerDir>
      <Mode>rw</Mode>
    </Volume> 
     <Volume>
      <HostDir></HostDir>
      <ContainerDir>/var/lib/unifi-video/videos</ContainerDir>
      <Mode>rw</Mode>
    </Volume> 
  </Data>
  <WebUI>https://[IP]:[PORT:7443]/</WebUI>
  <Icon>https://dl.ubnt.com/press/Company_Logos/U_Logo/WEB/U_Logo_RGB.png</Icon>
  <Banner></Banner>
  <ExtraParams>--cap-add NET_ADMIN --cap-add DAC_READ_SEARCH</ExtraParams>
</Container>
